<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <declare-styleable name="MyStyle">
        <attr name="startColor" format="integer"/>
        <attr name="endColor" format="integer"/>
        <attr name="translateFrom"/>
        <attr name="alpha" format="float"/>
        <attr name="scaleX" format="float"/>
        <attr name="scaleY" format="float"/>
    </declare-styleable>

    <attr name="translateFrom">
        <flag name="fromTop" value="0x01"/>
        <flag name="fromBottom" value="0x02"/>
        <flag name="fromLeft" value="0x04"/>
        <flag name="fromRight" value="0x08"/>
    </attr>


</resources>
